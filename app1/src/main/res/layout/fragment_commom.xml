<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginTop="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:id="@+id/rv_activation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@drawable/rv_onclick">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/activation" />

                <ImageView style="@style/style_common_arror" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:background="@color/view_color"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginTop="@dimen/base12dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/devices_status" />

                <TextView
                    android:id="@+id/tv_devices_status"

                    style="@style/style_common_text_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/gps" />

                <CheckBox
                    android:id="@+id/cb_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base15dp"
                    android:button="@drawable/cb_switch_drawable_selector"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:id="@+id/rv_current"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/current_location" />

                <TextView
                    android:id="@+id/tv_current"
                    style="@style/style_common_text_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sim_net" />

                <TextView
                    android:id="@+id/tv_sim_status"

                    style="@style/style_common_text_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:background="@color/view_color"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginTop="@dimen/base12dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:id="@+id/rv_voice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@drawable/rv_onclick">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/voice" />

                <ImageView style="@style/style_common_arror"

                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>


            <RelativeLayout
                android:id="@+id/rv_preview_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@drawable/rv_onclick">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/preview_video" />

                <ImageView style="@style/style_common_arror"

                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/moden" />

                <CheckBox
                    android:id="@+id/cb_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base15dp"
                    android:button="@drawable/cb_switch_drawable_selector"
                    android:checked="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout

                android:id="@+id/rv_voice_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@drawable/rv_onclick">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/voiceswitch" />

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:background="@color/view_color"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginTop="@dimen/base12dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:id="@+id/rv_save_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@drawable/rv_onclick">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/device_space" />

                <ImageView style="@style/style_common_arror" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:id="@+id/rv_resume"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@drawable/rv_onclick">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/factory_reset" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:background="@color/view_color"></View>
        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>

