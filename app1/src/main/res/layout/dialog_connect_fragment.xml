<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base280dp"
    android:layout_height="@dimen/base155dp"
    android:background="@drawable/dialog_connect"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base20dp"
            android:text="@string/prompt"
            android:textColor="@color/dialog_color"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>

    <TextView
        android:id="@+id/tv_disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base20dp"
        android:layout_marginTop="@dimen/base17dp"
        android:text="@string/open_wifi"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_dialog_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base35dp"
            android:text="@string/go"
            android:textColor="@color/dialog_button_color"
            android:textSize="17sp" />

        <TextView
            android:layout_marginRight="@dimen/base32dp"
            android:id="@+id/tv_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_dialog_go"
            android:layout_centerVertical="true"
            android:text="@string/cancle"
            android:textColor="@color/dialog_button_color"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>
