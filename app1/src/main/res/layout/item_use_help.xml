<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/rv_use_help"
    android:layout_height="@dimen/base45dp">
    <LinearLayout
        android:layout_centerInParent="true"

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/use_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="@string/use_help"
            android:textColor="@color/dialog_button_color"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/base7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
