<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/activity_main_title" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginTop="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/business_number" />

                <TextView
                    android:id="@+id/tv_marchant"
                    style="@style/style_common_text_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/car_num" />

                <TextView
                    android:id="@+id/tv_car"
                    style="@style/style_common_text_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:background="@color/view_color"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base43dp"
                android:background="@color/white">

                <TextView
                    style="@style/style_common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/driver_phone" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/style_common_text_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:background="@color/view_color"></View>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</FrameLayout>