<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_marginTop="@dimen/base15dp"
        android:background="@color/view_color"></View>



    <RelativeLayout
        android:id="@+id/rv_early_setting"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp">

        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/early_setting" />
        <ImageView style="@style/style_common_arror" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>

    <RelativeLayout
        android:id="@+id/rv_calibration_setting"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp">

        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/calibra_setting" />
        <ImageView style="@style/style_common_arror" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>
    <RelativeLayout
        android:id="@+id/rv_net_setting"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp">

        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/net_setting" />
        <ImageView style="@style/style_common_arror"

            />
    </RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>


    <View
        android:layout_marginTop="@dimen/base12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>
    <RelativeLayout
        android:id="@+id/rv_devices_info"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base43dp">

        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/devices_info" />
        <ImageView style="@style/style_common_arror"

            />
    </RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>


</LinearLayout>
