<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/activity_main_title" />
    <LinearLayout
        android:background="@drawable/dashed"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/warn_help_1"
            android:id="@+id/tv_help_one"
            style="@style/style_text_help"
            android:layout_marginTop="@dimen/base20dp"
        />

        <TextView
            android:id="@+id/tv_help_four"
            android:text="@string/warn_help_2"
            android:layout_marginTop="@dimen/base12dp"
            style="@style/style_text_help" />
        <TextView
            android:id="@+id/tv_help_five"
            android:text="@string/warn_help_3"
            android:layout_marginTop="@dimen/base12dp"
            style="@style/style_text_help" />
        <TextView
            android:id="@+id/tv_help_six"
            android:text="@string/warn_help_4"
            android:layout_marginBottom="@dimen/base20dp"
            android:layout_marginTop="@dimen/base12dp"
            style="@style/style_text_help"

            />
    </LinearLayout>

</LinearLayout>
