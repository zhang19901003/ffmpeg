<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base115dp"
        android:src="@drawable/login_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="+86"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/phone_arrow"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base12dp"
                android:background="@color/view_color"
                android:layout_width="1px"
                android:layout_height="@dimen/base32dp"></View>
            <EditText
                android:layout_gravity="center_vertical"
                android:background="@color/background"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/view_color"
                android:hint="@string/input_phone_number"
                android:layout_marginLeft="@dimen/base12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base5dp"
        android:background="@color/view_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp">

    </View>
    <LinearLayout
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base44dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:text="@string/password"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:password="true"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/background"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/view_color"
            android:hint="@string/input_password"
            android:layout_marginLeft="@dimen/base43dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/delete"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:background="@color/view_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp">
    </View>

    <Button

        android:textColor="@color/white"
        android:text="@string/login"
        android:textSize="17sp"
        android:background="@drawable/btn_enable"
        android:layout_marginTop="@dimen/base20dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base40dp" />
    <RelativeLayout
        android:layout_marginTop="@dimen/base24dp"
        android:layout_marginRight="@dimen/base17dp"
        android:layout_marginLeft="@dimen/base17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/register"
            android:textSize="14sp"
            android:textColor="@color/dialog_button_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <TextView
            android:layout_alignParentRight="true"
            android:text="@string/forget_password"
            android:textSize="14sp"
            android:textColor="@color/dialog_button_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
