<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <include layout="@layout/activity_main_title" />

    <com.adasplus.proadas.common.view.custom.ScrollLinearLayout
        android:id="@+id/lv_activation"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base15dp"
            android:gravity="center_vertical"
            android:background="@drawable/dashed"
            android:layout_width="@dimen/base330dp"
            android:layout_height="@dimen/base30dp">
            <ImageView
                android:id="@+id/iv_start"
                android:src="@drawable/start_normal"
                android:layout_marginLeft="@dimen/base12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="@dimen/base7dp"
                android:textSize="11sp"
                android:text="@string/required"
                android:textColor="@color/gray99"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/base15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/iv_start_bule"
                android:src="@drawable/start_blue"
                android:layout_marginLeft="@dimen/base20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="@dimen/base7dp"
                android:textSize="15sp"
                android:text="@string/business_number"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:gravity="center_vertical"

            android:layout_width="@dimen/base330dp"
            android:layout_height="@dimen/base45dp">

            <EditText
                android:imeOptions="actionSend"
                android:singleLine="true"
                android:id="@+id/et_business_number"
                android:background="@drawable/edtext_selector"
                android:textCursorDrawable="@drawable/editext"
                android:textSize="15sp"
                android:hint="@string/line_input"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base45dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/base15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/base20dp"
                android:textSize="15sp"
                android:text="@string/car_num"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:gravity="center_vertical"

            android:layout_width="@dimen/base330dp"
            android:layout_height="@dimen/base45dp">

            <EditText
                android:imeOptions="actionSend"
                android:singleLine="true"
                android:id="@+id/et_car_number"
                android:selectAllOnFocus="true"
                android:background="@drawable/edtext_selector"
                android:textCursorDrawable="@drawable/editext"
                android:textSize="15sp"
                android:hint="@string/line_input"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base45dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/base15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/base20dp"
                android:textSize="15sp"
                android:text="@string/driver_phone"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lv_phone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:gravity="center_vertical"
            android:layout_width="@dimen/base330dp"
            android:layout_height="@dimen/base45dp">

            <EditText

                android:imeOptions="actionSend"
                android:singleLine="true"
                android:id="@+id/et_phone_number"
                android:background="@drawable/edtext_selector"
                android:textCursorDrawable="@drawable/editext"
                android:textSize="15sp"
                android:hint="@string/line_input"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base45dp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base10dp"
            android:gravity="center_vertical"
            android:layout_width="@dimen/base330dp"
            android:layout_height="@dimen/base45dp">

            <EditText

                android:imeOptions="actionSend"
                android:singleLine="true"

                android:background="@drawable/edtext_selector"
                android:textCursorDrawable="@drawable/editext"
                android:textSize="15sp"
                android:hint="@string/line_input"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base45dp" />
        </LinearLayout>


    </com.adasplus.proadas.common.view.custom.ScrollLinearLayout>

    
    <Button
        android:textColor="@color/white"
        android:id="@+id/btn_activation"
        android:text="@string/activation"
        android:textSize="17sp"
        android:layout_marginTop="@dimen/base30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_bg"
        android:layout_width="@dimen/base120dp"
        android:layout_height="@dimen/base40dp" />

</LinearLayout>
