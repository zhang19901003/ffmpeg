<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base54dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_left_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@drawable/arrow_left"
            />
        <TextView
            android:id="@+id/tv_left_back"
            android:textColor="@color/white"

            android:text="@string/back"
            android:layout_marginLeft="@dimen/base10dp"
            android:textSize="@dimen/activity_main_title_left_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_left_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:textSize="@dimen/activity_main_title_left_size"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="none"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/activity_main_title_size" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_right_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_main_title_right_size"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_right_view"
            android:layout_width="@dimen/base30dp"
            android:layout_height="@dimen/base30dp"
            android:layout_marginRight="@dimen/base15dp"
            android:padding="@dimen/base5dp"
            android:src="@drawable/automatic_normal"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>