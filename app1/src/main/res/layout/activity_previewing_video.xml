<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_main_title" />

    <include layout="@layout/item_use_help"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>

    <LinearLayout
        android:layout_width="@dimen/base330dp"
        android:layout_height="@dimen/base30dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginTop="@dimen/base20dp">

        <RadioGroup
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.adasplus.proadas.common.view.custom.VideoRadioButton
                android:id="@+id/vb_au"
                style="@style/botton_video_style"
                android:layout_width="0dp"
                android:background="@drawable/rb_video_bg_au_select"
                android:drawableStart="@drawable/rb_video_drawable_au_selector"
                android:text="@string/automatic" />

            <com.adasplus.proadas.common.view.custom.VideoRadioButton
                android:id="@+id/vb_hand"
                style="@style/botton_video_style"
                android:layout_width="0dp"
                android:background="@drawable/rb_video_bg_hand_select"
                android:drawableStart="@drawable/rb_priview_drawable_selector"
                android:text="@string/hand" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base182dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base20dp">

        <com.adasplus.proadas.common.view.custom.SurfaceViewRadio
            android:id="@+id/sv_priview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <RelativeLayout
            android:id="@+id/scan_window"
            android:layout_width="@dimen/base90dp"
            android:layout_height="@dimen/base90dp"
            android:layout_centerInParent="true">
            <View
                android:layout_width="@dimen/base10dp"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base10dp"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base10dp"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base10dp"
                android:layout_height="@dimen/base1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base1dp"
                android:layout_height="@dimen/base10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base1dp"
                android:layout_height="@dimen/base10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base1dp"
                android:layout_height="@dimen/base10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/red" />

            <View
                android:layout_width="@dimen/base1dp"
                android:layout_height="@dimen/base10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/red" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>
