<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_main_title" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base1dp"
                    android:layout_marginTop="@dimen/base15dp"
                    android:background="@color/view_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base45dp"
                    android:background="@color/white">

                    <TextView
                        style="@style/style_common_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/voice_type" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/base15dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_ring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/rb_sen_drawable_selector" />

                        <TextView
                            style="@style/style_common_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base12dp"
                            android:text="@string/ring_voice" />

                        <CheckBox
                            android:id="@+id/cb_human"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base30dp"
                            android:button="@drawable/rb_sen_drawable_selector" />

                        <TextView
                            style="@style/style_common_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base12dp"
                            android:text="@string/homan_voice" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base1dp"
                    android:layout_marginLeft="@dimen/base15dp"
                    android:background="@color/view_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base45dp"
                    android:background="@color/white">

                    <TextView
                        style="@style/style_common_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/volume" />

                    <SeekBar

                        android:id="@+id/sb_player_seek_bar"
                        android:layout_width="@dimen/base284dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/base3dp"
                        android:maxHeight="@dimen/base2dp"
                        android:minHeight="@dimen/base2dp"
                        android:progressDrawable="@drawable/seekbar_voice"
                        android:thumb="@drawable/seekbar_voice_thumd" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base1dp"
                    android:background="@color/view_color"></View>
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</FrameLayout>