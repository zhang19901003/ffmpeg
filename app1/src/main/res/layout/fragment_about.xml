<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icom"
            android:layout_width="@dimen/base70dp"
            android:layout_height="@dimen/base70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/base42dp"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <TextView

        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/base23dp"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_marginTop="@dimen/base42dp"
        android:background="@color/view_color"></View>

    <RelativeLayout
        android:id="@+id/rv_checkout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base46dp"
        android:background="@color/white">

        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/check_version" />
        <ImageView style="@style/style_common_arror"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:background="@color/view_color"></View>

    <RelativeLayout
        android:id="@+id/rv_troud"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base46dp"
        android:background="@color/white">

        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/introduction" />

        <ImageView style="@style/style_common_arror"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:background="@color/view_color"></View>

    <RelativeLayout
        android:id="@+id/rv_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base46dp"
        android:background="@color/white">
        <TextView
            style="@style/style_common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/use_help" />
        <ImageView style="@style/style_common_arror"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/view_color"></View>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/base21dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/term_of_service"
                    android:textColor="@color/dialog_button_color"
                    android:textSize="12sp" />
                <View
                    android:layout_gravity="center"
                    android:background="@color/dialog_button_color"
                    android:layout_marginLeft="@dimen/base12dp"
                    android:layout_width="@dimen/base1dp"
                    android:layout_height="@dimen/base11dp"></View>

                <TextView
                    android:id="@+id/tv_hide"
                    android:layout_marginLeft="@dimen/base12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/private_policy"
                    android:textColor="@color/dialog_button_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/base12dp"
                android:text="@string/company"
                android:textColor="@color/gray99"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
